<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="appcadernovirtual.MainPage">

    <StackLayout>
        <Frame BackgroundColor="Aquamarine"  Padding="24" CornerRadius="0">
            <Label Text="Caderno Virtual" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
        </Frame>

        <Label Text="Revisão primeiro, segundo e terceiro ano" 
               FontSize="Title" 
               Padding="30,10,30,10"/>

        <Label FontSize="12" 
               Padding="30,24,30,0">

        </Label>

        <Button Text="1° Ano" Clicked="Button_Clicked"/>
        <Button Text="2° Ano" Clicked="Button_Clicked_1"/>
        <Button Text="3° Ano" Clicked="Button_Clicked_2"/>

    </StackLayout>

</ContentPage>
